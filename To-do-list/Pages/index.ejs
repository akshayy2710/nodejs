<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TO DO LIST</title>
    <!-- CSS -->
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #faf9f7;
            margin: 0;
            padding: 0;
        }
        h2 {
            text-align: center;
            margin: 20px 0;
            color: #444;
        }
        .top-btns {
            width: 90%;
            margin: 10px auto;
            text-align: right;
        }
        .top-btns a button {
            margin-left: 10px;
            padding: 8px 14px;
            border: none;
            border-radius: 5px;
            background-color: #8c7b75;
            color: white;
            cursor: pointer;
            font-size: 0.9em;
        }
        .top-btns a button:hover {
            background-color: #756660;
        }
        table {
            width: 90%;
            margin: auto;
            border-collapse: collapse;
            background: #fff;
            box-shadow: 0 2px 6px rgba(0,0,0,0.05);
            border-radius: 8px;
            overflow: hidden;
        }
        th, td {
            padding: 12px 15px;
            text-align: center;
        }
        th {
            background-color: #d6cfc4;
            color: #333;
            font-weight: 600;
        }
        tr:nth-child(even) {
            background-color: #f5f3f0;
        }
        a button {
            padding: 6px 12px;
            border: none;
            border-radius: 5px;
            background-color: #8c7b75;
            color: white;
            cursor: pointer;
            font-size: 0.9em;
        }
        a button:hover {
            background-color: #756660;
        }
    </style>
  </head>

  <body>
    <div class="top-btns">
      <a href="/addtask">
        <button type="button">Add Task</button>
      </a>
    </div>

    <h2>YOUR TASK !</h2>
    <table>
      <tr>
        <th>Task No</th>
        <th>Task Name</th>
        <th>Description</th>
        <th>Date</th>
        <th>Duration</th>
        <th>Efficient</th>
        <th>Action</th>
      </tr>
      <% taskdata.forEach((data) => { %>
      <tr>
        <td><%= data.id %></td>
        <td><%= data.name %></td>
        <td><%= data.desc %></td>
        <td><%= data.date %></td>
        <td><%= data.time %></td>
        <td><%= data.efficient %></td>
        <td>
          <a href="/edittaskData?id=<%= data.id %>">
            <button type="button">Edit</button>
          </a>
          <a href="/deleteData?id=<%= data.id %>">
            <button type="button">Delete</button>
          </a>
        </td>
      </tr>
      <% }) %>
    </table>
  </body>
</html>
