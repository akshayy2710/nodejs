<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Recipes - RecipeShare</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('navbar') %>

  <main class="main-content">
    <div class="container">
      <div class="page-header">
        <h1>ğŸ“š My Recipes</h1>
        <p>Manage your culinary creations</p>
        <a href="/recipes/form" class="btn btn-primary">
          <i class="icon">â•</i> Add New Recipe
        </a>
      </div>

      <% if (recipes.length === 0) { %>
        <div class="empty-state">
          <i class="icon-large">ğŸ“</i>
          <h2>You haven't created any recipes yet</h2>
          <p>Start sharing your favorite recipes with the community!</p>
          <a href="/recipes/form" class="btn btn-primary">Create Your First Recipe</a>
        </div>
      <% } else { %>
        <div class="recipes-grid">
          <% recipes.forEach(recipe => { %>
            <div class="recipe-card">
              <div class="recipe-image">
                <% if (recipe.imageUrl) { %>
                  <img src="<%= recipe.imageUrl %>" alt="<%= recipe.title %>">
                <% } else { %>
                  <div class="recipe-placeholder">ğŸ³</div>
                <% } %>
                <span class="recipe-category"><%= recipe.category %></span>
              </div>
              <div class="recipe-content">
                <h3><%= recipe.title %></h3>
                <p class="recipe-description"><%= recipe.description.substring(0, 100) %>...</p>
                <div class="recipe-meta">
                  <span><i class="icon">â±ï¸</i> <%= recipe.cookingTime %> min</span>
                  <span><i class="icon">ğŸ‘¥</i> <%= recipe.servings %> servings</span>
                  <span><i class="icon">ğŸ“Š</i> <%= recipe.difficulty %></span>
                </div>
                <div class="recipe-actions">
                  <a href="/recipes/<%= recipe._id %>" class="btn btn-secondary">View</a>
                  <a href="/recipes/edit/<%= recipe._id %>" class="btn btn-edit">Edit</a>
                  <a href="/recipes/delete/<%= recipe._id %>" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this recipe?')">Delete</a>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      <% } %>
    </div>
  </main>
</body>
</html>

