<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Recipes - RecipeShare</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('navbar') %>

  <main class="main-content">
    <div class="container">
      <div class="page-header">
        <h1>ğŸ½ï¸ All Recipes</h1>
        <p>Discover amazing recipes from our community</p>
      </div>

      <% if (recipes.length === 0) { %>
        <div class="empty-state">
          <i class="icon-large">ğŸ“</i>
          <h2>No recipes yet</h2>
          <p>Be the first to share a recipe!</p>
          <a href="/recipes/form" class="btn btn-primary">Add Recipe</a>
        </div>
      <% } else { %>
        <div class="recipes-grid">
          <% recipes.forEach(recipe => { %>
            <div class="recipe-card">
              <div class="recipe-image">
                <% if (recipe.imageUrl) { %>
                  <img src="<%= recipe.imageUrl %>" alt="<%= recipe.title %>">
                <% } else { %>
                  <div class="recipe-placeholder">ğŸ³</div>
                <% } %>
                <span class="recipe-category"><%= recipe.category %></span>
              </div>
              <div class="recipe-content">
                <h3><%= recipe.title %></h3>
                <p class="recipe-description"><%= recipe.description.substring(0, 100) %>...</p>
                <div class="recipe-meta">
                  <span><i class="icon">â±ï¸</i> <%= recipe.cookingTime %> min</span>
                  <span><i class="icon">ğŸ‘¥</i> <%= recipe.servings %> servings</span>
                  <span><i class="icon">ğŸ“Š</i> <%= recipe.difficulty %></span>
                </div>
                <div class="recipe-author">
                  <i class="icon">ğŸ‘¨â€ğŸ³</i> By <%= recipe.author.username %>
                </div>
                <a href="/recipes/<%= recipe._id %>" class="btn btn-secondary">View Recipe</a>
              </div>
            </div>
          <% }); %>
        </div>
      <% } %>
    </div>
  </main>
</body>
</html>

